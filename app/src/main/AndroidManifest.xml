<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"
        tools:replace="android:maxSdkVersion" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <!--    Thongbao -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <!--  Android 12+  -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM"/>
    <!--  ThÃªm cho Android 12+  -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_clock"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_clock_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="34">

        <receiver
            android:name=".utility.AlarmReceiver"
            android:exported="false" />


        <activity
            android:name=".view.HelpActivity"
            android:exported="false" />
        <activity
            android:name=".view.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.BackupActivity"
            android:exported="true" />
        <activity
            android:name=".view.RootActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddActivity"
            android:exported="true" />
        <activity
            android:name=".view.EditActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.TimeManageActivity"
            android:exported="false" />

        <activity
            android:name=".view.TimerActivity"
            android:exported="false" />
        <activity
            android:name=".view.StopWatchActivity"
            android:exported="false" />
        <activity
            android:name=".view.CalendarActivity"
            android:exported="false" />
    </application>

</manifest>